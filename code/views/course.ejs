<!DOCTYPE html>
<html>

<head>
    <title> Add Student</title>
    <link rel="stylesheet" href="/plugins/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/theme.css" />
    <link rel="stylesheet" href="/css/MoneAdmin.css" />
    <link rel="stylesheet" href="/plugins/Font-Awesome/css/font-awesome.css" />
    <!--END GLOBAL STYLES -->

    <!-- PAGE LEVEL STYLES -->
     <link rel="stylesheet" href="/plugins/validationengine/css/validationEngine.jquery.css" />   
</head>

<body class="padTop53 ">
    <div id="wrap">
        <div id="top">
            <nav class="navbar navbar-inverse navbar-fixed-top " style="padding-top: 10px;">
                <a data-original-title="Show/Hide Menu" data-placement="bottom" data-tooltip="tooltip"
                    class="accordion-toggle btn btn-primary btn-sm visible-xs" data-toggle="collapse" href="#menu"
                    id="menu-toggle">
                    <i class="icon-align-justify"></i>
                </a>
                <header class="navbar-header">

                    <!-- <a href="index.html" class="navbar-brand">
                        <img src="assets/img/logo.png" alt="" /></a>
                </header> -->
                <ul class="nav navbar-top-links navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="icon-user "></i>&nbsp; <i class="icon-chevron-down "></i>
                        </a>

                        <ul class="dropdown-menu dropdown-user">
                            <li><a href="#"><i class="icon-user"></i> User Profile </a>
                            </li>
                            <li><a href="#"><i class="icon-gear"></i> Settings </a>
                            </li>
                            <li class="divider"></li>
                            <li><a href="/student/login"><i class="icon-signout"></i> Logout </a>
                            </li>
                        </ul>

                    </li>
                </ul>

            </nav>

        </div>
        <div id="left">
            <ul id="menu" class="collapse">
                
                <ul id="menu" class="collapse">
                    <li class="panel">
                        <a href="/state">
                            <i class="icon-edit-sign"></i>ADD State
                        </a>
                    </li>
    
                    <li class="panel">
                        <a href="/city">
                            <i class="icon-edit-sign"></i>ADD City
                        </a>
                    </li>
    
                    <li class="panel active">
                        <a href="/course">
                            <i class=" icon-book"></i>ADD Course
                        </a>
                    </li>
                    <li class="panel">
                        <a href="/block">
                            <i class="icon-map-marker"></i>ADD Block
                        </a>
    
                    </li>
                    <li class="panel">
                        <a href="/room">
                            <i class="icon-edit-sign"></i>ADD Room
                        </a>
                    </li>
                    <li class="panel ">
                        <a href="/roomallocate/allocate">
                            <i class="icon-edit-sign"></i>Room Requests
                        </a>
                    </li>
    
                </ul>
        </div>
        <div id="content">

            <div class="inner" style="min-height:1200px;">
                <div class="row" style="margin-top:10px;">
                    <div class="col-lg-8">
                        <div class="panel panel-default">
                            <div class="panel-heading">

                            </div>
                            <div class="panel-body">
                                <ul class="nav nav-tabs">
                                    <li class="active" id="tab1">
                                        <a href="#home" data-toggle="tab">Availabe Courses</a>
                                    </li>
                                    <li class="" id="tab2">
                                        <a href="#profile" data-toggle="tab"><%= tabheader %> </a>
                                    </li>

                                </ul>

                                <div class="tab-content">
                                    <div class="tab-pane fade in " id="home">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                        Course Detail
                                                    </div>
                                                    <div class="panel-body">
                                                        <div class="table-responsive">
                                                            <table
                                                                class="table table-striped table-bordered table-hover"
                                                                id="dataTables-example">
                                                                <thead>
                                                                    <tr>
                                                                        <!-- <th>Course ID</th> -->
                                                                        <th>Course Name</th>
                                                                        <th>Course Code</th>
                                                                        <th>Course Description</th>
                                                                        <th>Course Number of Years</th>

                                                                        <th>EDIT</th>
                                                                        <th>DELETE</th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <% if(data.length > 0) { %>
                                                                    <% for (let course of data) { %>
                                                                    <tr>
                                                                        <!-- <td><%= course.course_id%></td> -->
                                                                        <td><%= course.course_name%></td>
                                                                        <td><%= course.course_code%></td>
                                                                        <td><%= course.course_desc%></td>
                                                                        <td><%= course.course_no_of_years%></td>
                                                                        <td><a class='btn btn-success btn-circle'
                                                                                href='/course/<%=course.course_id%>'><i
                                                                                    class='icon-check'></i></a></td>
                                                                        <td><a class='btn btn-danger btn-circle'
                                                                                href='/course/delete/<%=course.course_id%>'><i
                                                                                    class='icon-trash'></i></a></td>

                                                                    </tr>

                                                                    <% }  } 
                                                                                     else { %>
                                                                    <tr>
                                                                        <td colspan="6"> No Course Found!</td>
                                                                    </tr>
                                                                    <% } %>

                                                                </tbody>
                                                            </table>

                                                        </div>
                                                    </div>
                                                </div>

                
                                            </div>

                                        </div>


                                    </div>
                                    <div class="tab-pane fade in" id="profile">
                                        <form class="form-horizontal" method="POST" action="<%= pathurl%>" name="frm1"
                                            id="popup-validation">

                                            <h1></h1>
         
                                            <div class="form-group">

                                                <label for="text" class="control-label col-lg-4">Course Name</label>

                                                <div class="col-lg-8">
                                                    <input type="text" name="course_name" class="validate[required] form-control" value = "<%= cblock.course_name %>" />
                                                </div>
                                            </div>
           
                                            <div class="form-group">
                                                <label class="control-label col-lg-4">Course Number of Years</label>
                                                <div class="col-lg-8">
                                                    <input type="number" name="course_no_of_years" type="number" min="1" max="5" 
                                                     class="validate[required] form-control" value = "<%= cblock.course_no_of_years %>" />
                                                </div>
                                           
                                            </div>

                                            <div class="form-group">

                                                <label for="text" class="control-label col-lg-4">Course Code</label>

                                                <div class="col-lg-8">

                                                    <input type="text" name="course_code" value="<%= cblock.course_code%>"
                                                        class="validate[required] form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group">

                                                <label for="text" class="control-label col-lg-4">Course Description</label>

                                                <div class="col-lg-8">

                                                    <input type="text" name="course_desc" value="<%= cblock.course_desc%>"
                                                        class="validate[required] form-control" />
                                                </div>
                                            </div>

                                            <input type="hidden" value="<%= cblock.course_id%>" name="id" id="id"/> 

                                            <input type="submit" class="btn btn-danger btn-sm btn-line" value="<%= btnvalue %>" name= "<%= btnvalue %>" /><br>

                                        </form>

                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <div id="footer">
        <p>&copy; binarytheme &nbsp;2014 &nbsp;</p>
    </div>
   
<script src="/plugins/jquery-2.0.3.min.js"></script>
<script src="/plugins/bootstrap/js/bootstrap.min.js"></script>
<script src="/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>
<script src="/plugins/dataTables/jquery.dataTables.js"></script>
<script src="/plugins/dataTables/dataTables.bootstrap.js"></script>
 <script>
     $(document).ready(function () {
         if(document.getElementById("id").getAttribute("value")==0)
         {
             $(".nav-tabs li").addClass('active');
             $(".nav-tabs li:eq(1)").removeClass('active');
             $(".tab-content .tab-pane").addClass('active');
             $(".tab-content .tab-pane:eq(1)").removeClass('active');
         }
         else
         {
              $(".nav-tabs li").removeClass('active');
             $(".nav-tabs li:eq(1)").addClass('active');
             $(".tab-content .tab-pane").removeClass('active');
             $(".tab-content .tab-pane:eq(1)").addClass('active');
         }
         $('#dataTables-example').dataTable();
     });
</script>

<!-- END GLOBAL SCRIPTS -->

<!-- PAGE LEVEL SCRIPTS -->

<script src="/plugins/validationengine/js/jquery.validationEngine.js"></script>
<script src="/plugins/validationengine/js/languages/jquery.validationEngine-en.js"></script>
<script src="/plugins/jquery-validation-1.11.1/dist/jquery.validate.min.js"></script>
<script src="/js/validationInit.js"></script>
<script>
   $(function () { formValidation(); });
   </script>
</body>

</html>